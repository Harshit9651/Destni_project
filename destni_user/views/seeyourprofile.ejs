
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
  <style>
    body {
      background-color: #181818;
      color: #fff;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
    }

    .profile-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      display: flex;
      flex-wrap: wrap;
    }

    .profile-details-card {
      background-color: #282828;
      padding: 20px;
      border-radius: 8px;
      margin-right: 20px;
      width: 250px;
      height: 40vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
    }

    .profile-details-card img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      margin-bottom: 20px;
      position: relative;
      transition: background-color 0.3s ease;
    }

    .profile-details-card:hover img {
      background-color: rgba(255, 255, 255, 0.1);
    }

    .profile-details-card:hover .camera-icon {
      display: block;
    }

    .camera-icon {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: none;
      cursor: pointer;
      background-color: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      padding: 10px;
    }

    .profile-details-card h2,
    .profile-details-card p {
      margin: 10px 0;
    }

    .profile-main {
      flex-grow: 1;
    }

    .profile-header {
      display: flex;
      align-items: center;
      padding-bottom: 20px;
      border-bottom: 1px solid #333;
      position: relative;
    }

    .profile-photo {
      position: relative;
    }

    .profile-photo img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      transition: background-color 0.3s ease;
    }

    .profile-photo:hover img {
      background-color: rgba(255, 255, 255, 0.1);
    }

    .profile-photo:hover .camera-icon {
      display: block;
    }

    .profile-info {
      margin-left: 20px;
    }

    .username {
      font-size: 24px;
      margin: 0;
    }

    .edit-button {
      margin-left: 10px;
      background-color: #87CEFA;
      color: #000;
      border: none;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
    }

    .profile-stats {
      display: flex;
      margin: 10px 0;
    }

    .stat {
      margin-right: 20px;
    }

    .count {
      font-weight: bold;
    }

    .bio {
      margin: 0;
    }

    .profile-content {
      margin-top: 20px;
    }

    .destinations,
    .posts {
      margin-bottom: 20px;
    }

    .destination-list,
    .post-list {
      display: flex;
      flex-wrap: wrap;
    }

    .destination-item,
    .post-item {
      margin: 10px;
      background-color: #282828;
      padding: 10px;
      border-radius: 8px;
      width: calc(100% - 20px);
    }

    .destination-item img,
    .post-item img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
    }

    .destination-item span,
    .post-item span {
      display: block;
      text-align: center;
      margin-top: 5px;
    }

    .destination-details {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
    }

    .destination-details span {
      font-size: 14px;
    }

    .destination-details i {
      margin-right: 5px;
    }

    /* Modal Styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
      background-color: #282828;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
      max-width: 500px;
      border-radius: 10px;
    }

    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close:hover,
    .close:focus {
      color: #fff;
      text-decoration: none;
      cursor: pointer;
    }

    .modal-body {
      margin-top: 10px;
    }

    .modal-body input[type="text"] {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 5px;
      margin-top: 10px;
      background-color: #333;
      color: #fff;
    }

    .modal-body button {
      margin-top: 10px;
      background-color: #87CEFA;
      color: #000;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    .settings-icon {
      position: fixed;
      top: 20px;
      right: 20px;
      cursor: pointer;
      font-size: 24px;
      color: #87CEFA;
    }
   /* Loading Spinner Styles */
   .spinner-container {
      display: none; /* Hidden by default */
      position: fixed;
      z-index: 9999;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5); /* Black background with opacity */
      backdrop-filter: blur(5px); /* Apply blur to the background */
      justify-content: center;
      align-items: center;
    }

    .spinner {
      width: 80px;
      height: 80px;
      border: 8px solid rgba(255, 255, 255, 0.3); /* Semi-transparent white border */
      border-radius: 50%;
      border-top: 8px solid #fff; /* Solid white top border */
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    @media (min-width: 768px) {
      .destination-item,
      .post-item {
        width: calc(50% - 20px);
      }
    }
  </style>
</head>
<body>
  <div class="profile-container">
    <div class="profile-details-card">
      <img src="https://png.pngtree.com/png-clipart/20190924/original/pngtree-business-people-avatar-icon-user-profile-free-vector-png-image_4815126.jpg" alt="User Photo">
      <!-- <i class="fa fa-camera camera-icon" onclick="document.getElementById('fileInput').click();"></i> -->
      <input type="file" id="fileInput" accept="image/*" style="display:none;" onchange="showCropper(this)">
      <h2>Harshit Sharma</h2>
      <p>State: Rajasthan</p>
      <p>Pincode: 123456</p>
      <p>Phone: +91 12345 67890</p>
    </div>
    <div class="profile-main">
      <header class="profile-header">
        <div class="profile-photo">
          <img src="https://png.pngtree.com/png-clipart/20190924/original/pngtree-business-people-avatar-icon-user-profile-free-vector-png-image_4815126.jpg" alt="Profile Photo">
          <i class="fa fa-camera camera-icon" onclick="document.getElementById('fileInput').click();"></i>
        </div>
        <div class="profile-info">
          <h2 class="username">Harshit Sharma <button class="edit-button" onclick="openModal()">Edit Bio</button></h2>
          <div class="profile-stats">
            <div class="stat"><span class="count">100</span> posts</div>
            <div class="stat"><span class="count">150</span> followers</div>
            <div class="stat"><span class="count">200</span> following</div>
          </div>
          <p class="bio" id="bio">User bio goes here. This is a short description about the user.</p>
        </div>
      </header>
      <div class="profile-content">
        <div class="destinations">
          <h3>Destinations</h3>
          <div class="destination-list">
            <div class="destination-item">
              <img src="https://png.pngtree.com/png-clipart/20190924/original/pngtree-business-people-avatar-icon-user-profile-free-vector-png-image_4815126.jpg" alt="Destination 1">
              <div class="destination-details">
                <span><i class="fas fa-map-marker-alt"></i> From: Jaipur</span>
                <span><i class="fas fa-map-marker-alt"></i> To: Udaipur</span>
              </div>
              <div class="destination-details">
                <span><i class="fas fa-calendar-alt"></i> Date: 2023-12-24</span>
                <span><i class="fas fa-users"></i> 5 People</span>
              </div>
              <span><i class="fas fa-comment"></i> This is a sample message about the destination.</span>
            </div>
        
          </div>
        </div>
        <div class="posts">
          <h3>Posts</h3>
          <div class="post-list">
            <div class="post-item">
              <img src="https://png.pngtree.com/png-clipart/20190924/original/pngtree-business-people-avatar-icon-user-profile-free-vector-png-image_4815126.jpg" alt="Post 1">
              <span>This is a sample post description.</span>
            </div>
       
          </div>
        </div>
      </div>
    </div>
  </div>
 
  
 
  <div id="bioModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <span class="close" onclick="closeModal()">&times;</span>
        <h2>Edit Bio</h2>
      </div>
      <div class="modal-body">
        <input type="text" id="bioInput" placeholder="Enter new bio">
        <button onclick="saveBio()">Save</button>

      </div>
    </div>
  </div>

  <div id="cropperModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <span class="close" onclick="closeCropperModal()">&times;</span>
        <h2>Crop Image</h2>
      </div>
      <div class="modal-body">
        <div>
          <img id="cropperImage" style="max-width: 100%;">
        </div>
        <button onclick="cropAndUpload()">Crop and Upload</button>
  
      </div>
    </div>
  </div>
  
  
  
  
  
  <div id="spinner" class="spinner-container">
    <div class="spinner"></div>
  </div>
  

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
  <script>
    function openModal() {
      document.getElementById('bioModal').style.display = 'block';
    }

    function closeModal() {
      document.getElementById('bioModal').style.display = 'none';
    }
    function showSpinner() {
  document.getElementById('spinner').style.display = 'flex';
}

function hideSpinner() {
  document.getElementById('spinner').style.display = 'none';
}

  function saveBio() {
      var bioInput = document.getElementById('bioInput').value;
      document.getElementById('bio').innerText = bioInput;

      showSpinner(); // Show spinner before the request starts
      axios.post('http://localhost:3001/user/profile/userbio',{ bio: bioInput },{},  { withCredentials: true })
      .then(function(response) {
        alert('Bio updated successfully!');
   
        closeModal();
      })
      .catch(function(error) {
        console.error('Error:', error.response ? error.response.data : error.message);
      
        alert('Failed to update bio.');
      }).finally(function() {
      hideSpinner(); // Hide spinner after the request is complete
    });;
    }

    function showCropper(input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function(e) {
          $('#cropperImage').attr('src', e.target.result);
          $('#cropperModal').css('display', 'block');
          var image = document.getElementById('cropperImage');
          var cropper = new Cropper(image, {
            aspectRatio: 1,
            viewMode: 3,
            background: false,
            zoomable: false,
          });
          $('#cropperModal').data('cropper', cropper);
        }
        reader.readAsDataURL(input.files[0]);
      }
    }

    function closeCropperModal() {
      showSpinner(); // Show spinner before the request starts
      var cropper = $('#cropperModal').data('cropper');
      cropper.destroy();
      $('#cropperModal').css('display', 'none');
    }
   
    function cropAndUpload() {
      var cropper = $('#cropperModal').data('cropper');
      cropper.getCroppedCanvas().toBlob(function(blob) {
        var formData = new FormData();
        formData.append('croppedImage', blob);
        $.ajax('http://localhost:3001/user/profile/updateprofilephoto', {
          method: 'POST',
          data: formData,
          processData: false,
          contentType: false,
          success: function() {
            alert('Upload successful!');
            location.reload();
          },
          error: function() {
            alert('Upload failed!');
          },complete: function() {
        hideSpinner(); // Hide spinner after the request is complete
      }
        });
      });
      closeCropperModal();
    }
    
  </script>
</body>
</html>  