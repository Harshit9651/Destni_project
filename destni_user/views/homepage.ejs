    //         likeCount.textContent = response.data.likes;
    //       }
    //     })
    //     .catch(error => console.error('Error liking post:', error));
    // }

    function handleLike(event, postId) {
  const icon = event.target;
  const isActive = icon.classList.contains('active');
  
  axios.post(`http://localhost:3002/destni_post/like/like_unlike_post/${postId}`, {}, { withCredentials: true })
    .then(response => {
      if (response.data.success) {
        if (isActive) {
          icon.classList.remove('active');
          icon.nextElementSibling.textContent = response.data.likes;
        } else {
          icon.classList.add('active');
          icon.nextElementSibling.textContent = response.data.likes;
        }
      }
    })
    .catch(error => console.error('Error liking post:', error));
}
    function handleSave(event, postId) {
      const saveIcon = event.target;
      axios.post(`/api/save/${postId}`)
        .then(response => {
          if (response.data.success) {
            saveIcon.classList.toggle('saved');
          }
        })
        .catch(error => console.error('Error saving post:', error));
    }
  </script>
</body>
</html>
